<style>
    a{
        text-decoration: none;
        color: purple;
    }
</style>
<header>
  <center><h1>To Do List</h1></center>
</header>

<main>
  <form method="post" action="/ejs">
    <center>
      <label for="task">Task:</label>
      <input type="text" id="task" name="task" required />
      <input type="submit" value="Submit" />
    </center>

  </form>

  <br />
  <br />

  <table border="1" cellpadding="10px" align="center">
    <thead>
     
      <tr> <th><a href="/ejs"> All Task </a></th>
            <th><a href="/ejs/completed"> Completed Task </a></th>
            <th><a href="/ejs/running"> Running Task </a></th>
            <th><a href="/ejs/Pending"> Pending Task </a></th>
            <th><a href="/ejs/decline"> Decline Task </a></th>
        </tr>
      <tr>
        <th>No.</th>
        <th>Task.</th>
        <th>TaskStatus.</th>
        <th>Edit.</th>
        <th>Delete.</th>
      </tr>
    </thead>
    <tbody>
      <% result.forEach(function(result, index) { %>
      <tr align="center">
        <td><%= index + 1 %></td>
        <td><%= result.task %></td>
        <td><%= result.taskStatus %></td>
        <td ><a href="/edit/<%= result.id %>">Edit</a></td>
        <td><a href="/delete/<%= result.id %>">Delete</a></td>
      </tr>
      <% }); %>
    </tbody>
  </table>
</main>
